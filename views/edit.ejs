<%- include header %>
<div class="container">
<form class="form-horizontal" role="form" method="post" action="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
    <div class="form-group">
          <label for="title" class="col-md-1 control-label">标题</label>
          <div class="col-md-11">
            <input class="form-control" type="text" name="title" value="<%= post.title %>" disabled="disabled" />
          </div>
    </div>
   
    <div class="form-group">
          <label class="col-md-1 control-label">标签</label>
          <% if(post.tags) { %>
          <div class="col-md-4">
            <input class="form-control" type="text" name="tag1" value="<%= post.tags[0] %>" disabled="disabled" />
          </div>
          <div class="col-md-3">
            <input class="form-control" type="text" name="tag2" value="<%= post.tags[1] %>" disabled="disabled" />
          </div>
          <div class="col-md-4">
            <input class="form-control" type="text" name="tag3" value="<%= post.tags[2] %>" disabled="disabled" />
          </div>
          <% }  %>
      </div> 

      <div class="form-group">
        <label class="col-md-1 control-label">正文</label>  
        <div class="col-md-11">
            <textarea class="form-control" name="post" rows="20"><%= post.post %></textarea>
        </div>
      </div>

     <div class="form-group">
        <div class="col-md-offset-1 col-md-11">
           <button type="submit" class="btn btn-primary">Save</button>
        </div>
     </div>
     
</form>
</div>
<%- include footer %>