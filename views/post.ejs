<%- include header %>
<div class="container">
	<form class="form-horizontal" role="form" method="post">
		<div class="form-group">
      		<label for="title" class="col-md-1 control-label">标题</label>
      		<div class="col-md-11">
         		<input class="form-control" type="text" name="title" />
      		</div>
   	</div>
	 
	 	<div class="form-group">
      		<label class="col-md-1 control-label">标签</label>
      		<div class="col-md-4">
         		<input class="form-control" type="text" name="tag1" />
      		</div>
      		<div class="col-md-3">
         		<input class="form-control" type="text" name="tag2" />
      		</div>
      		<div class="col-md-4">
         		<input class="form-control" type="text" name="tag3" />
      		</div>
   		</div> 

   		<div class="form-group">
   			<label class="col-md-1 control-label">正文</label>	
		    <div class="col-md-11">
		        <textarea class="form-control" name="content" rows="20"></textarea>
		    </div>
  		</div>

	   <div class="form-group">
	      <div class="col-md-offset-1 col-md-11">
	         <button type="submit" class="btn btn-primary">Post</button>
	      </div>
	   </div>
	</form>
</div>
<%- include footer %>